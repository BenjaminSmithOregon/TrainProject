@model OreFun2014.ViewModels.PassengerIndexData

@{
    ViewBag.Title = "Passengers";
}

<h2>Passengers</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @*@Html.ActionLink("First Name", "Index", new { sortOrder = ViewBag.NameSortParm })*@
            First Name
        </th>
        <th>
            @*@Html.ActionLink("Last Name", "Index", new { sortOrder = ViewBag.LNameSortParm })*@
            Last Name
        </th>
        <th>
            Baggage
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Passengers)
    {
        string selectedRow = "";
        if (item.PassengerID == ViewBag.PassengerID)
        {
            selectedRow = "success";
        }
        <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Baggage)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PassengerID }) |
                @Html.ActionLink("Details", "Details", new { id = item.PassengerID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PassengerID }) |
                @Html.ActionLink("Report", "PassReport", new { id = item.PassengerID })
            </td>
        </tr>
    }

</table>
