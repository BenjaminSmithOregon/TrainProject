@model OreFun2014.Models.Route

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Route</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.RouteNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RouteNumber)
        </dd>

    </dl>
</div>

@if (Model.Station != null)
{
    <h3>Route Stops</h3>
    <table class="table">
        <tr>
            <th>Station Name</th>
            <th>Arrival Time</th>
            <th>Departure Time</th>
        </tr>

        @foreach (var item in Model.Station)
        {
            string selectedRow = "";
            if (item.StationID == ViewBag.StationID)
            {
                selectedRow = "success";
            }

            <dd>
                @Html.DisplayFor(modelitem => modelitem.Station.StationName)
            </dd>

            <dd>
                @Html.DisplayFor(modelitem => modelitem.ArrivalTime)
            </dd>

            <dd>
                @Html.DisplayFor(modelitem => modelitem.DepartTime)
            </dd>
        }

    </table>
}
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.RouteID }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
